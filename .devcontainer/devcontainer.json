{
	"name": "Python 3 & Data Science",
	"image": "mcr.microsoft.com/devcontainers/python:3",
	"forwardPorts": [8888],
    "portsAttributes": {
        "8888": {
            "label": "Jupyter Lab",
            "onAutoForward": "openPreview"
        }
    },
	"postCreateCommand": "pip install --user pandas jupyterlab seaborn scikit-learn statsmodels",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"github.copilot",
				"ms-toolsai.jupyter"
			]
		}
	}
}
